# Podfile
use_frameworks!

target 'Fermentor' do
    pod 'RxSwift',       '~> 4.0'
    pod 'RxCocoa',       '~> 4.0'
    pod 'SwiftyJSON',    '~> 4.0'
    pod 'Alamofire',     '~> 4.7'
end

# RxTest and RxBlocking make the most sense in the context of unit/integration tests
target 'FermentorTests' do
    pod 'RxBlocking', '~> 4.0'
    pod 'RxTest',     '~> 4.0'
end
